<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE7E8"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ECDDDD">

        <TextView
            android:id="@+id/text_view_p1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:text="Player 1: 0 "
            android:textColor="#050505"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/text_view_p2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_p1"
            android:layout_marginLeft="10dp"
            android:text="Player 2: 0"
            android:textColor="#0B0A0A"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="33dp"
            android:layout_marginRight="33dp"
            android:background="#FFF"
            android:text="reset"
            app:backgroundTint="#800303" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="#F3EFEF">

        <Button
            android:id="@+id/button_00"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:textColor="#F4EEEE"
            android:textColorHighlight="#F3EBEB"
            android:textColorHint="#F3EAEA"
            android:textColorLink="@color/white"
            android:textSize="60sp"
            app:backgroundTint="#0B0B0B" />

        <Button
            android:id="@+id/button_01"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#B2EBF2"
            android:textColor="#F3ECEC"
            android:textColorHighlight="#F3ECEC"
            android:textColorHint="#F8F1F1"
            android:textColorLink="#F3EEEE"
            android:textSize="60sp"
            app:backgroundTint="#0B0A0A" />

        <Button
            android:id="@+id/button_02"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#B2EBF2"
            android:textColor="#ECE4E4"
            android:textColorHighlight="#F6F1F1"
            android:textColorHint="#ECE5E5"
            android:textColorLink="#F4EFEF"
            android:textSize="60sp"
            app:backgroundTint="#0C0C0C" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="#F8F4F4">

        <Button
            android:id="@+id/button_10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#B2EBF2"
            android:textColor="#F3EEEE"
            android:textColorHighlight="#F8F1F1"
            android:textColorHint="#F6F2F2"
            android:textColorLink="#F1EAEA"
            android:textSize="60sp"
            app:backgroundTint="#0B0A0A" />

        <Button
            android:id="@+id/button_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#B2EBF2"
            android:textColor="#F4F3F3"
            android:textColorHighlight="#F8F2F2"
            android:textColorHint="#F1EEEE"
            android:textColorLink="#F8F5F5"
            android:textSize="60sp"
            app:backgroundTint="#090909" />

        <Button
            android:id="@+id/button_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#B2EBF2"
            android:textColor="#F6F0F0"
            android:textColorHighlight="#F3EFEF"
            android:textColorHint="#F6F2F2"
            android:textColorLink="#F6F3F3"
            android:textSize="60sp"
            app:backgroundTint="#070707" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:background="#F3EEEE">

        <Button
            android:id="@+id/button_20"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#0A0B0B"
            android:textColor="#F3EDED"
            android:textColorHighlight="#F8F5F5"
            android:textColorHint="#FAF6F6"
            android:textColorLink="#F3EAEA"
            android:textSize="60sp"
            app:backgroundTint="#0B0A0A" />

        <Button
            android:id="@+id/button_21"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#B2EBF2"
            android:textColor="#F4EFEF"
            android:textColorHighlight="#F6F0F0"
            android:textColorHint="#F3F1F1"
            android:textColorLink="#F1EAEA"
            android:textSize="60sp"
            app:backgroundTint="#0E0E0E" />

        <Button
            android:id="@+id/button_22"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:background="#0D0E0E"
            android:textColor="#F6EFEF"
            android:textColorHighlight="#E6E2E2"
            android:textColorHint="#ECE8E8"
            android:textColorLink="#F8F3F3"
            android:textSize="60sp"
            app:backgroundTint="#070707" />
    </LinearLayout>
</LinearLayout>